          {items.map((p:any) => {
            const titleHref = p.link || p.publisherUrl || p.url || "#";
            const venueEl = p.venueUrl
              ? <a href={p.venueUrl} target="_blank" rel="noopener">{p.venue}</a>
              : p.venue;

            return (
              <article class="result">
                <div class="result-head">
                  <span class="type">
                    {p.type}{p.openAccess ? " • Open access" : ""}
                  </span>
                  {typeof p.citedBy === "number" && (
                    <span class="cited">Cited by {p.citedBy}</span>
                  )}
                </div>

                <h3 class="title">
                  <a href={titleHref} target="_blank" rel="noopener">
                    {p.title}
                  </a>
                </h3>

                <div class="authors">{toAuthorsText(p.authors)}</div>
                <div class="venue">
                  {venueEl}{p.year ? `, ${p.year}` : ""}
                </div>

                <div class="actions">
                  {p.abstract && (
                    <details>
                      <summary>Show abstract</summary>
                      <p>{p.abstract}</p>
                    </details>
                  )}

                  {(p.pdf || p.fullTextUrl) && (
                    <a class="btn ghost" href={p.pdf || p.fullTextUrl} target="_blank" rel="noopener">
                      Check full-text ↗
                    </a>
                  )}

                  {(p.publisherUrl || p.link || p.url) && (
                    <a class="btn" href={p.publisherUrl || p.link || p.url} target="_blank" rel="noopener">
                      View at Publisher ↗
                    </a>
                  )}

                  {p.relatedUrl && (
                    <a class="btn link" href={p.relatedUrl} target="_blank" rel="noopener">
                      Related documents
                    </a>
                  )}
                </div>
              </article>
            );
          })}
        </div>
      </section>
    </main>
