  .pain-points-list li strong { color: var(--color-accent); }
  .section-heading { display: flex; align-items: center; margin-bottom: 2rem; border-bottom: 1px solid var(--color-border, rgba(255,255,255,0.1)); padding-bottom: 1rem; }
  .section-number { font-size: 1.5rem; font-weight: bold; color: var(--color-accent); margin-right: 1rem; opacity: 0.8; }
  .section-heading h2 { margin: 0; font-size: 1.8rem; color: var(--color-text); }
  .subsection-heading { font-size: 1.5rem; font-weight: 600; margin-top: 2.5rem; margin-bottom: 1.5rem; color: var(--color-text); }
  .user-groups-highlight { background-color: var(--color-bg-secondary, rgba(255,255,255,0.03)); border-left: 3px solid var(--color-accent); padding: 1.5rem; margin: 2rem 0; border-radius: 0 8px 8px 0; }
  .user-groups-highlight p { margin: 0; font-style: italic; }
