  .goals-card { background-color: var(--color-bg-secondary, rgba(255,255,255,0.03)); border-radius: 12px; padding: 1.5rem; border: 1px solid var(--color-border, rgba(255,255,255,0.1)); }
  .goals-card h4 { margin-top: 0; margin-bottom: 1rem; color: var(--color-accent); }
  .goals-card p { margin: 0; }
