  .card-style {
    background-color: var(--surface-bg);
    border: 1px solid var(--surface-border);
    border-radius: 12px;
    padding: 1.5rem;
  }
  /* A consistent highlight box style */
  .highlight-box {
    background-color: var(--surface-bg);
    border-left: 3px solid var(--accent-color);
    padding: 1.5rem 1.5rem 1.5rem 2rem;
    margin: 2rem 0;
    border-radius: 0 8px 8px 0;
  }
  .highlight-box p { margin: 0; }

  /* --- Hero & Project Details --- */
  .hero-container {
    margin-bottom: 4rem;
  }
  .hero-image-wrapper {
    border-radius: 12px;
    overflow: hidden;
    max-height: 600px;
    border: 1px solid var(--surface-border);
  }
  .hero-image {
    width: 100%;
    object-fit: cover;
  }
