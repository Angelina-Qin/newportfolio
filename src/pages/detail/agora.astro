  box-shadow: inset 0 0 0 1px var(--surface-border, #d0d7de);
}

/* 4. 同时应用到章节分割线 */
.agora-content .section-heading {
    border-bottom-color: var(--card-border) !important;
}
  
  p {
    line-height: 1.7;
    color: var(--text-color-secondary);
    margin-bottom: 1.5rem;
  }
  p:last-child {
    margin-bottom: 0;
  }
  .full-width-image {
    width: 100%;
    height: auto;
    display: block;
  }

