.agora-content .detail-card,
.agora-content .stat-item,
.agora-content .goals-list,
.agora-content .participant-breakdown,
.agora-content .insight-card,
.agora-content .persona-card,
.agora-content .goals-card,
.agora-content .feature-item,
.agora-content .design-image-container,
.agora-content .analysis-image {
  background-color: var(--surface-bg);
  border: 1px solid var(--surface-border, #d0d7de) !important; /* 带后备值 */
